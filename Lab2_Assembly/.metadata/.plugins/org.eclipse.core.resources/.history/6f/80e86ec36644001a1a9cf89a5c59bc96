.cpu cortex-m0
.thumb
.syntax unified
.fpu softvfp

.data
i: .word 0
size: .word 4
sum: .word 0
source:
.word 3
.word 4
.word 7
.word 11
.word 18
.word 29
.word 47
.word 76
.word 123
.word 199
.word 322


.text
.global main
main:
	// r0 = sum
	// r1 = size
	// r2 = i
	movs r2, #0

	ldr r1, =size
	ldr r1, [r1] // load size into r1

	movs r0, #0 // sum = 0

	for:
		movs r2, #0
	check:
		cmp r2, r1
		bge endfor
	body:
		if:
			movs r3, 25
			cmp r2, r3
		then:
		else:
		endif:
	next:
		adds r2, #1
		b check
	endfor:


    wfi
